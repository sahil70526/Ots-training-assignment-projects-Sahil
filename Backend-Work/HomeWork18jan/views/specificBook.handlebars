<div class="container text-center">
    <div class="row">
        <div class="col">
            <img src={{this.img}} class="img-fluid" alt="book">
        </div>
        <div class="col">
            {{!-- card --}}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h5 class="card-subtitle mb-2 text-muted"> Author :- {{this.author}}</h5>
                    <p class="card-text">{{this.discription}}</p>
                </div>
            </div>

            {{!-- card close --}}
        </div>
    </div>

</div>
